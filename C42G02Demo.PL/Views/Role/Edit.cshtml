@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <h1>Edit On @Model.RoleName Role :</h1>

    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input readonly class="form-control" asp-for="Id" />
    </div>
    
    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input class="form-control" asp-for="RoleName" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Save" class="btn btn-primary mt-2" />
    </div>

    <a asp-controller="Role" asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>

</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial"></partial>
}

