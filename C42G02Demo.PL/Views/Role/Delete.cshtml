@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
}
<div class="alert alert-info text-center" role="alert">
    <h2>Are you sure about deleting @Model.RoleName Role?</h2>
</div>

<form asp-action="ConfirmDelete">
    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input readonly class="form-control" asp-for="Id" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input readonly class="form-control" asp-for="RoleName" />
    </div>

    <input type="submit" value="Delete" class="btn btn-danger"</input> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>



