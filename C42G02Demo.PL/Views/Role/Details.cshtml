    ViewData["Title"] = "Details";
}

<h1>Role : @Model.RoleName Details</h1>

<div class="form-group">
    <label class="col-form-label" asp-for="Id"></label>
    <input readonly class="form-control" asp-for="Id" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="RoleName"></label>
    <input readonly class="form-control" asp-for="RoleName" />
</div>


<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a> |
<a asp-action="Index" class="btn btn-light">Back To List</a>


