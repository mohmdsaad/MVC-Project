@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />
<br />

<a asp-controller="Role" asp-action="Create" class="btn btn-dark"> Create New Role</a>
<br />
<br />

@if (Model.Count() > 0)
{
    <div class="m-2">
        <form asp-action="index" class="row offset-2">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Role's Name" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-info " value="Search" />
            </div>
        </form>
    </div>
    <table class="table table-striped table-hover mt-5">

        <thead style="background-color: #f8f9fa;">
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.RoleName)</th>
                

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id </td>
                    <td>@role.RoleName </td>

                    <partial name="_ButtonsPartial" model="role.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center" role="alert">
        <h4>No Roles Found</h4>
        <p>There are no roles available at the moment.</p>
    </div>
}

