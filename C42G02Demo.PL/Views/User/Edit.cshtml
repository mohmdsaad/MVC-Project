@model UserViewModel
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <h1>Edit On @Model.FName @Model.LName User :</h1>

    <div class="form-group">
        <label class="col-form-label" asp-for="FName"></label>
        <input class="form-control" asp-for="FName" />
        <span asp-validation-for="FName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="LName"></label>
        <input class="form-control" asp-for="LName" />
        <span asp-validation-for="LName" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    </div>

    <div>
        <input type="submit" value="Save" class="btn btn-primary mt-2" />
    </div>

    <a asp-controller="User" asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>

</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial"></partial>
}

